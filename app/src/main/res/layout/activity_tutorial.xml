<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/toolbar"
                app:title="@string/app_name"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.james.rocket.views.SquareImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:layout_gravity="center"
                android:src="@mipmap/tutorialtap"
                android:scaleType="fitCenter"
                android:background="#3f51b5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap to fly."
                android:id="@+id/textView13"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="?android:textColorSecondary"
                android:textSize="14sp"
                android:padding="16dp"
                android:background="#303f9f" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.james.rocket.views.SquareImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:layout_gravity="center"
                android:src="@mipmap/tutorialcrash"
                android:scaleType="fitCenter"
                android:background="#2196f3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Don&apos;t hit the top or the bottom."
                android:id="@+id/textView11"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="?android:textColorSecondary"
                android:textSize="14sp"
                android:padding="16dp"
                android:background="#1976d2" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.james.rocket.views.SquareImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:layout_gravity="center"
                android:src="@mipmap/tutorialmeteor"
                android:scaleType="fitCenter"
                android:background="#15181b" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Don&apos;t get hit by the flying things."
                android:id="@+id/textView12"
                android:layout_gravity="end|bottom"
                android:textColor="?android:textColorSecondary"
                android:textSize="14sp"
                android:padding="16dp"
                android:background="#000" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:text="Start"
            android:textAllCaps="true"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_margin="8dp"
            android:layout_gravity="end"
            android:id="@+id/button" />

    </LinearLayout>
</ScrollView>